{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "baseUrl": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": false,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "lib": [
      "DOM",
      "ES5",
      "ES2017",
      "ES2015.Iterable",
      "ES2015.promise"
    ]
  },
  "exclude": [
    "build",
    "dist"
  ],
  "include": [
    "src/*"
  ]
}
